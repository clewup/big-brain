generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Base
// id        Int      @id @default(autoincrement())
// createdAt DateTime @default(now())
// createdBy String
// updatedAt DateTime @updatedAt
// updatedBy String

// Hierarchy
// 1. Hub
// 2. Hub Section
// 3. Guide
// 4. Guide Section & Comments

model Guide {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  title      String
  image      String
  categories String[]
  sections   GuideSection[]

  hubSection   HubSection @relation(fields: [hubSectionId], references: [id], onDelete: Cascade)
  hubSectionId Int
}

model GuideSection {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  title   String
  content String

  guide   Guide @relation(fields: [guideId], references: [id], onDelete: Cascade)
  guideId Int
}

model Hub {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  title    String
  image    String
  features String[]
  sections HubSection[]
}

model HubSection {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  title  String
  guides Guide[]

  hub   Hub @relation(fields: [hubId], references: [id], onDelete: Cascade)
  hubId Int
}
